<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="25dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nothing to see here"
        android:id="@+id/empty_heading"
        android:layout_alignParentTop="true"
        android:textColor="@color/DarkSlateGray"
        android:layout_centerHorizontal="true" />

    <View
        android:layout_height="1dp"
        android:layout_below="@+id/empty_heading"
        android:layout_alignLeft="@+id/empty_heading"
        android:layout_alignStart="@+id/empty_heading"
        android:layout_width="match_parent"
        android:layout_alignRight="@+id/empty_heading"
        android:background="@color/DarkGray"
        android:layout_marginTop="5dp"
        android:id="@+id/separator" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Do something?"
        android:id="@+id/empty_text"
        android:layout_below="@+id/separator"
        android:layout_marginTop="5dp"
        android:textColor="@color/LightSlateGray"
        android:gravity="center"/>

</RelativeLayout>